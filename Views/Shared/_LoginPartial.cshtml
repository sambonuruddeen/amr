@using Microsoft.AspNetCore.Identity
@inject SignInManager<AmrUser> SignInManager
@inject UserManager<AmrUser> UserManager

<div class="btn-toolbar mb-2 mb-md-0">
@if (SignInManager.IsSignedIn(User))
{
     <div class="btn-group mr-2">
        <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a></a>
    </div>
     <div class="btn-group mr-2">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="btn btn-lg btn-outline-secondary">Logout</button>
        </form>
    </div>
}
else
{
    
        <div class="btn-group mr-2">
            <a asp-area="Identity" asp-page="/Account/Register"><button class="btn btn-lg btn-outline-secondary">Register </button> </a>
            <a asp-area="Identity" asp-page="/Account/Login"><button class="btn btn-lg btn-outline-secondary">Login</button></a>
        </div>  
    
}
</div>
